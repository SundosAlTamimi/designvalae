<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inv2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bac_"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/home" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="@color/grayLight"
                android:textSize="40sp"
                android:textStyle="bold"
                app:fontFamily="serif-monospace" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/newItem"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/newItems"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/item_add" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/new_item"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shelf"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shelfs"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/selftag" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/print_shelf_tag"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/barcode"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/barcodes"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/barcodes" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/print_item_barcode"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ItemPrice"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/no_thing"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/item"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/confirm" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView116"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/confirm_price"
                                android:textColor="@color/orFloor"
                                android:textSize="18sp"
                                 />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/impText"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:visibility="gone">

                        <Button
                            android:id="@+id/impTexts"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/textfrom" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/import_item_from_text_file"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>