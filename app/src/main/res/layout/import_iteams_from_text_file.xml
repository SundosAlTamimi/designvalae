<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inv2"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bac_"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="@string/import_item_from_text_file"
            android:textColor="@color/grayLight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="serif-monospace" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="15dp"
            android:background="@color/orFloor" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/no_thing">

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/file_path"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/contain_header"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/no_thing"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/path1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/freeButton"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/openPath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/search_buttons"
                        android:text="@string/open"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/no_thing"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/save_buttons"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/clear_buttons"
                        android:text="@string/clear"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/exit"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/exit_buttons"
                        android:text="@string/exit"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="271dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/no_thing"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/no_thing"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>